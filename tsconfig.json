{
  "compilerOptions": {
    "lib": ["ES2019", "dom"],
    "typeRoots": ["./src/types"],
    "strict": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./dist/types",
    "module": "ES2020",
    "moduleResolution": "node"
  },
  "exclude": ["test", "app"]
}

